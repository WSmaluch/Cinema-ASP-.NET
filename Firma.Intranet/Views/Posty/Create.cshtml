@model Firma.Data.Data.CMS.Posty

@{
    ViewData["Title"] = "Create";
}

<section class="section section-details grey lighten-4">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 m6">
                                <span class="card-title">Dodaj post</span>
                            </div>
                            
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Tytul" class="control-label"></label>
                                <input asp-for="Tytul" class="form-control" />
                                <span asp-validation-for="Tytul" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tresc" class="control-label"></label>
                                <input asp-for="Tresc" class="form-control" />
                                <span asp-validation-for="Tresc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataPublikacji" class="control-label"></label>
                                <input asp-for="DataPublikacji" class="form-control" />
                                <span asp-validation-for="DataPublikacji" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Autor" class="control-label"></label>
                                <input asp-for="Autor" class="form-control" />
                                <span asp-validation-for="Autor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ObrazekUrl" class="control-label"></label>
                                <input asp-for="ObrazekUrl" class="form-control" />
                                <span asp-validation-for="ObrazekUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index"><input type="button" value="Powrót" class="btn btn-primary" /></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}