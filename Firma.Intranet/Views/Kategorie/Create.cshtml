@model Firma.Data.Data.CMS.Kategorie

@{
    ViewData["Title"] = "Create";
}


<section class="section section-details grey lighten-4">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 m6">
                                <span class="card-title">Dodaj kategorie</span>
                            </div>
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nazwa" class="control-label"></label>
                                <input asp-for="Nazwa" class="form-control" />
                                <span asp-validation-for="Nazwa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Opis" class="control-label"></label>
                                <input asp-for="Opis" class="form-control" />
                                <span asp-validation-for="Opis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index"><input type="button" value="Powrót" class="btn btn-primary" /></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}